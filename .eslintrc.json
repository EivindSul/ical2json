{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "env": {"node": true, "browser": true, "es6": true},
  "rules": {
    "no-trailing-spaces": ["error"]
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],

      "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier"
      ]
    }
  ]
}
